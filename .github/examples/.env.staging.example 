# Example Staging Environment File for Envault
# Copy this to .env.staging and update with your values

# Database Configuration
DATABASE_HOST=staging-db.example.com
DATABASE_PORT=3306
DATABASE_NAME=myapp_staging
DATABASE_USER=staging_admin             # → Will be classified as SECRET
DATABASE_PASSWORD=staging_password      # → Will be classified as SECRET

# API Configuration
API_BASE_URL=https://staging-api.example.com
OPENAI_API_KEY=sk-test_1234567890      # → Will be classified as SECRET

# Authentication & Security
NEXTAUTH_URL=https://staging.myapp.com
NEXTAUTH_SECRET=staging_jwt_secret     # → Will be classified as SECRET

# Feature Flags & Configuration
ENABLE_ANALYTICS=true                  # → Will be classified as VARIABLE
ENABLE_DEBUG=true                      # → Will be classified as VARIABLE
NODE_ENV=staging                       # → Will be classified as VARIABLE

# Public Configuration
NEXT_PUBLIC_APP_NAME=MyApp (Staging)   # → Will be classified as VARIABLE
NEXT_PUBLIC_API_URL=https://staging-api.example.com # → Will be classified as VARIABLE