# Example Production Environment File for Envault
# Copy this to .env.production and update with your values

# Database Configuration
DATABASE_HOST=prod-db.example.com
DATABASE_PORT=3306
DATABASE_NAME=myapp_production
DATABASE_USER=admin                    # → Will be classified as SECRET
DATABASE_PASSWORD=super_secure_password # → Will be classified as SECRET

# API Configuration
API_BASE_URL=https://api.example.com
OPENAI_API_KEY=sk-1234567890abcdef     # → Will be classified as SECRET
STRIPE_API_KEY=sk_live_1234567890      # → Will be classified as SECRET

# Authentication & Security
NEXTAUTH_URL=https://myapp.com
NEXTAUTH_SECRET=jwt_super_secret       # → Will be classified as SECRET
JWT_SECRET=another_secret_key          # → Will be classified as SECRET
ENCRYPTION_KEY=encryption_key_here     # → Will be classified as SECRET

# Feature Flags & Configuration
ENABLE_ANALYTICS=true                  # → Will be classified as VARIABLE
ENABLE_DEBUG=false                     # → Will be classified as VARIABLE
NODE_ENV=production                    # → Will be classified as VARIABLE

# Public Configuration
NEXT_PUBLIC_APP_NAME=MyAwesomeApp      # → Will be classified as VARIABLE
NEXT_PUBLIC_API_URL=https://api.example.com # → Will be classified as VARIABLE

# Third-party Services
KEYCLOAK_CLIENT_SECRET=client_secret   # → Will be classified as SECRET
OAUTH_CLIENT_SECRET=oauth_secret       # → Will be classified as SECRET

# Monitoring & Logging
SENTRY_DSN=https://sentry.io/dsn       # → Will be classified as VARIABLE
LOG_LEVEL=info                         # → Will be classified as VARIABLE